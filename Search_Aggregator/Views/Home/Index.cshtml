@{
    ViewBag.Title = "Home Page";
}

<html>
    <body class="homePage">
        <form action="/Home/Results">
            <h3>Please type a query to search:</h3><br />
            <input type="text" name="query" /><br />
            <input type="hidden" name="page" value="1" />
            <input type="submit" value="Submit" /><br />
        </form>
        <hr />
        <p>This is a search aggregator that combines the search results between Google and Bing.</p>
        <p>Created by Peter Milner in .NET MVC.</p>
        <a href="https://github.com/pmilnerr/Search_Aggregator">Github Link</a>
    </body>
    
</html>